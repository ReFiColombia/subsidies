{
  "name": "subsidies-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Subsidios ReFi Colombia - Monorepo",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "subgraph"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:subgraph": "npm run build --workspace=subgraph"
  },
  "keywords": [
    "subsidies",
    "refi",
    "colombia",
    "web3",
    "blockchain"
  ],
  "author": "",
  "license": "MIT"
}
